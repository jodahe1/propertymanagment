{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@shared/shared-kernel": [
        "libs/shared-kernel/src"
      ],
      "@shared/shared-kernel/*": [
        "libs/shared-kernel/src/*"
      ],
      "@config/config": [
        "libs/config/src"
      ],
      "@config/config/*": [
        "libs/config/src/*"
      ],
      "@alarm-core/incoming-ports": [
        "src/alarm/application/ports/incoming/index"
      ],
      "@alarm-core/outgoing-ports": [
        "src/alarm/application/ports/outgoing/index"
      ],
      "@alarm-core/domain-entities": [
        "src/alarm/domain/entities/index"
      ],
      "@alarm-core/domain-value-objects": [
        "src/alarm/domain/valueObjects"
      ],
      "@app-config/app-config": [
        "libs/app-config/src"
      ],
      "@app-config/app-config/*": [
        "libs/app-config/src/*"
      ]
    }
  }
}